{
  "name": "argster",
  "version": "1.1.4",
  "description": "Just a simple command/argument manager",
  "main": "lib/index.js",
  "umd:main": "lib/index.umd.js",
  "module": "lib/index.mjs",
  "source": "src/index.ts",
  "types": "lib/index.d.ts",
  "author": "Gudjon Jonsson <gaui@gaui.is> (https://gaui.is)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gaui/argster.git"
  },
  "scripts": {
    "build": "yarn microbundle --target node --external child_process,events,assert,util",
    "test": "jest",
    "dts": "yarn tsc --emitDeclarationOnly",
    "push": "yarn build && yarn publish",
    "lint": "tslint -p .",
    "format": "prettier \"./{src,__tests__,examples}/**/*.{js,jsx,ts,tsx,json,md}\" --write",
    "typecheck": "tsc --noEmit --pretty --skipLibCheck"
  },
  "dependencies": {
    "glob": "^7.1.3",
    "ramda": "^0.26.1"
  },
  "browser": {
    "fs": false
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.4.0",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-transform-modules-commonjs": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "@babel/preset-typescript": "^7.3.3",
    "@types/glob": "^7.1.1",
    "@types/jest": "^24.0.11",
    "@types/node": "^11.12.2",
    "@types/ramda": "^0.26.5",
    "jest": "^24.5.0",
    "microbundle": "^0.11.0",
    "prettier": "^1.16.4",
    "ts-jest": "^24.0.1",
    "ts-node": "^8.0.3",
    "tslint": "^5.14.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.4.1"
  }
}
